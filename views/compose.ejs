<%- include("partial/header"); %>

<h1>Compose</h1>

<form action="/compose" method="POST">
	<div class="form-group">
		<label for="post-title">Title</label>
		<input class="form-control" type="text" name="title" id="post-title" />

		<label for="status">Post</label>
		<textarea class="form-control" name="status" id="status" rows="5"></textarea>
	</div>
	<button class="btn btn-primary mt-2" type="submit">Publish</button>
</form>
